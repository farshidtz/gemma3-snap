{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update inference-snaps-cli source-tag in snapcraft.yaml",
      "fileMatch": [
        "^snap/snapcraft\\.yaml$"
      ],
      "matchStrings": [
        "source:\\s*https://github\\.com/canonical/inference-snaps-cli\\s*\\n\\s*source-tag:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "canonical/inference-snaps-cli",
      "versioningTemplate": "semver"
    }
  ]
}
